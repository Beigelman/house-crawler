[Unit]
Description=Executa House Validator semanalmente às segundas-feiras às 08h
Requires=house-validator.service

[Timer]
# Executa toda segunda-feira às 08:00
OnCalendar=Mon *-*-* 08:00:00

# Se o sistema estiver desligado no horário agendado, executa ao ligar
Persistent=true

# Randomiza até 5 minutos para evitar sobrecarga se houver múltiplos timers
RandomizedDelaySec=300

[Install]
WantedBy=timers.target


